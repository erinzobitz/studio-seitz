{%- assign section_color = section.settings.color_combination -%}
{%- include 'global-variables' -%}


<footer class="{{ global__section_with_padding_class }} color--{{ section_color }}-text bg--{{ section_color }}-background">
  <div class="max-site-width lg--up--px3">
    <div class="grid px2 lg--up--px0 ">
      <div class="grid__item mb3 md--up--one-whole lg--up--one-seventh">
        <div class="grid">
          <div class="grid__item one-third lg--up--one-whole">
            <a href="/" class="font-size--xl f--heading color--{{ section_color }}-text">
              {% assign logo_max_width = 100 %}
              {% if section.settings.logo != blank %}
                {% capture image_size %}{{ logo_max_width }}x{% endcapture %}
                <img src="{{ section.settings.logo | img_url: image_size }}"
                     srcset="{{ section.settings.logo | img_url: image_size }} 1x, {{ section.settings.logo | img_url: image_size, scale: 2 }} 2x"
                     alt="{{ section.settings.logo.alt | default: shop.name }}"
                     class="footer__logo"
                     >
              {% else %}
                {{ shop.name }}
              {% endif %}
            </a>
          </div>

        </div>
      </div>
      <div class="grid__item md--up--one-whole lg--up--six-sevenths">
        <div class="grid">

        {% case section.blocks.size %}
          {% when 1 %}
            {% assign footer_grid_width = 'md--up--one-whole lg--up--one-whole' %}
          {% when 2 %}
            {% assign footer_grid_width = 'md--up--one-half lg--up--one-half' %}
          {% when 3 %}
            {% assign footer_grid_width = 'md--up--one-whole lg--up--one-third' %}
          {% else %}
            {% assign footer_grid_width = 'md--up--one-whole lg--up--one-whole' %}
        {% endcase %}

          {% for block in section.blocks %}
          <div class="grid__item {{ global__basic_font_size }} {{ footer_grid_width }} mb3 lg-up--mb0">

            {% if block.type == 'menus' %}

              {% assign single_linklist = false %}

              {% if block.settings.main_linklist == blank and block.settings.secondary_linklist != blank %}
                {% assign single_linklist = true %}
              {% endif %}

              {% if block.settings.main_linklist != blank and block.settings.secondary_linklist == blank %}
                {% assign single_linklist = true %}
              {% endif %}

              <div class="grid">
                {% if block.settings.main_linklist  != blank %}
                  {% assign link_list = block.settings.main_linklist %}
                  {% include 'footer__linklist' %}
                {% endif %}
                {% if block.settings.secondary_linklist  != blank %}
                  {% assign link_list = block.settings.secondary_linklist %}
                  {% include 'footer__linklist' %}
                {% endif %}
              </div>
            {% endif %}

            {% if block.type == 'richtext' %}
              <div class="three-quarters lg--up--one-whole richtext">
                {{ block.settings.text }}
              </div>
              {% endif %}

              {% if block.type == 'newsletter' %}
                <div class="mtn1">
                  <a class="text__body text__body--2 text__body--white" href="tel:+13475991403">+1.347.599.1403</a>
                </div>
                <div>
                  <a class="action-link action-link--white text__body text__body--2 text__body--white" href="mailto:studio@studioseitz.com">studio@studioseitz.com</a>
                </div>
                <div class="newsletter__label text__body text__body--2 text__body--white pt50">
                  {{ block.settings.text}}
                </div>
                {% form 'customer' %}
                  {{ form.errors | default_errors }}
                  {% if form.posted_successfully? %}
                    <p class="form--success f--main">{{ 'general.newsletter_form.confirmation' | t }}</p>
                  {% else %}
                    <div class="footer__input-group input-group">
                      <input type="hidden" name="contact[tags]" value="newsletter">
                      <label for="Email" class="hide">{{ 'general.newsletter_form.newsletter_email' | t }}</label>
                      <input type="email"
                        name="contact[email]"
                        id="Email"
                        class="text__body text__body--2 footer__input input-group-field py1 bg--transparent"
                        value="{% if customer %}{{ customer.email }}{% endif %}"
                        placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}"
                        autocorrect="off"
                        autocapitalize="off">
                      <span class="input-group-btn">
                        <button type="submit" class="newsletter__submit py1" name="commit" id="Subscribe">
                          {% include 'arrow-right' %}
                        </button>
                      </span>
                    </div>
                  {% endif %}
                {% endform %}
            {% endif %}

          </div>
          {% endfor %}


        </div>
      </div>
    </div>

    <div class="grid {% if section.settings.show_payment_icons and shop.enabled_payment_types != empty %}grid--rev{% endif %} px2 mt2 lg--up--mt5 lg--up--px0">
      <div class="grid__item md--up--mb3 md--up--one-whole lg--up--one-seventh"></div>
      <div class="grid__item md--up--one-whole lg--up--six-sevenths">
        {%- assign social_accounts = 'Facebook, Twitter, Pinterest, Instagram, Snapchat, Tumblr, YouTube, Vimeo,' | split: ', ' -%}

        <div class="md--up--hide">
          <ul class="list--reset list--reset--no-margin">
            {% for social in social_accounts %}
              {%- assign social_handle = social | handleize -%}
              {% capture social_link %}social_{{ social_handle }}_link{% endcapture %}
              {% capture social_icon %}icon-{{ social_handle }}{% endcapture %}

              {% if settings[social_link] != blank %}
                <li class="inline-block">
                  <a class="social-icon color--{{ section_color }}-text pr1 font-size--xxs mb1 block" target="_blank" href="{{ settings[social_link] }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: social }}">
                    {% include social_icon %}
                    <span class="icon-fallback-text">{{ social }}</span>
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
          <p class="footer__credit">&copy; {{ 'now' | date: "%Y" }} Studio Seitz, LLC. All rights reserved.</br>
            <i>Photos by <a class="footer__credit--link" href="http://stephenkentjohnson.com/">Stephen Kent Johnson</a>;</i><br>
            <i>Styling by <a class="footer__credit--link" href="http://www.erinswift.com/">Erin Swift</a>;</i><br>
            <i>Site Development by <a class="footer__credit--link" href="http://erinzobitz.com">Erin Zobitz</a></i>
          </p>
        </div>

        <div class="sm--hide">
          <div class="footer__credit inline-block">&copy; {{ 'now' | date: "%Y" }} Studio Seitz, LLC. All rights reserved.</br></div>
          <ul class="right list--reset list--reset--no-margin">
            {% for social in social_accounts %}
              {%- assign social_handle = social | handleize -%}
              {% capture social_link %}social_{{ social_handle }}_link{% endcapture %}
              {% capture social_icon %}icon-{{ social_handle }}{% endcapture %}

              {% if settings[social_link] != blank %}
                <li class="inline-block">
                  <a class="social-icon color--{{ section_color }}-text pl1 font-size--xxs mb1 block" href="{{ settings[social_link] }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: social }}">
                    {% include social_icon %}
                    <span class="icon-fallback-text">{{ social }}</span>
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
          <br><i class="footer__credit">Photos by <a class="footer__credit--link" href="http://stephenkentjohnson.com/">Stephen Kent Johnson</a>; Styling by <a class="footer__credit--link" href="http://www.erinswift.com/">Erin Swift</a>; Site Development by <a class="footer__credit--link" href="http://erinzobitz.com">Erin Zobitz</a></i>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_theme_credit",
        "label": "Show theme credit",
        "default": true
      },
      {
        "type":      "header",
        "content":   "Color"
      },
      {
         "type": "select",
         "id": "color_combination",
         "label": "Combination",
         "options": [
            { "value": "primary", "label": "Primary"},
            { "value": "secondary ", "label": "Secondary"},
            { "value": "tertiary", "label": "Tertiary"},
            { "value": "quarternary", "label": "Quarternary"}
         ]
      }
    ],
    "blocks": [
      {
        "type": "menus",
        "name": "Menus",
        "limit": 1,
        "settings": [
          {
            "type": "link_list",
            "id": "main_linklist",
            "label": "Menu",
            "default": "footer",
            "info": "This menu won't show dropdown items"
          },
          {
            "type": "link_list",
            "id": "secondary_linklist",
            "label": "Secondary Menu",
            "info": "This menu won't show dropdown items"
          }
        ]
      },
      {
        "type": "richtext",
        "name": "Rich text",
        "limit": 1,
        "settings": [
          {
            "id": "text",
            "type": "richtext",
            "label": "Text",
            "default": "<p>Use this to add additional information about your store, e.g. address / contact details.</p>"
          }
        ]
      },
      {
        "type": "newsletter",
        "name": "Newsletter",
        "limit": 1,
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Receive special offers and first look at new products.</p>"
          }
        ]
      }
    ]
  }

{% endschema %}
