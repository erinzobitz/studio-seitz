
{% include 'global-variables' %}

<section class="cart">
  <div class="max-site-width md--up--px2 page-section">
    <div class="lg--up--ten-twelfths mx--auto px2 md--up--px0">
      {% if cart.item_count > 0 %}
        <h2 class="text__header text__header--2 text__header--white">Your Cart</h2>
        <form action="/cart" method="post" novalidate>

          <div class="cart">
            <div class="cart__row sm--hide">
              <div class="grid">
                <div class="grid__item lg--up--three-fifths">
                  <div class="table full--w">
                    <div class="table-cell one-third">
                      <div class="text__body text__body--semi-bold">
                        Item
                      </div>
                    </div>
                  </div>
                </div>
                <div class="grid__item lg--up--two-fifths">
                  <div class="table full--w">
                    <div class="table-cell one-third">
                      <div class="js-qty-wrapper text-center text__body text__body--semi-bold">
                        Qty
                      </div>
                    </div>
                    <div class="table-cell two-thirds text-align--right text__body text__body--semi-bold">
                      {{ 'cart.label.total' | t }}
                    </div>
                  </div>
                </div>
              </div>
              <div class="cart__divider mt2"></div>
            </div>

            {% for item in cart.items %}
              <div class="cart__row font-size--sm mt3">
                <div class="grid relative">
                  <div class="grid__item lg--up--three-fifths">
                    <div class="grid grid--full ">
                      <div class="grid__item one-quarter">
                        {% if item.image != blank %}
                          <a href="{{ item.url | within: collections.all }}">
                            {{ item | img_url: 'grande' | img_tag: item.title }}
                          </a>
                        {% endif %}
                      </div>
                      <div class="grid__item three-quarters">
                        <div class="pl3 md--up--pl4">
                          <div class="table full--w">
                            <div class="table-cell two-thirds">
                              <a class="text__highlight text__highlight--2 text__highlight--white" href="{{ item.url }}">{{ item.product.title }}</a>
                            </div>
                            <div class="table-cell text-align--right font-size--m one-third md--up--hide">
                              {{ item.line_price | money }}
                            </div>
                          </div>

                          {% unless item.product.has_only_default_variant %}
                            <p class="m0">{{ item.variant.title }}</p>
                          {% endunless %}

                          {% if settings.cart_vendor_enable %}
                          <p class="m0">{{ item.vendor }}</p>
                          {% endif %}

                          {%- assign property_size = item.properties | size -%}

                          {% if property_size > 0 %}
                            {% for p in item.properties %}
                              {% unless p.last == blank %}
                                {{ p.first }}:
                                {% if p.last contains '/uploads/' %}
                                  <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                                {% else %}
                                  {{ p.last }}
                                {% endif %}
                              {% endunless %}
                            {% endfor %}
                          {% endif %}

                          <div class="js-qty-wrapper color--main one-half md--up--hide">
                            {% comment %}
                            <input type="number"
                                   class="inline-block quantity-sync__{{ forloop.index }}"
                                   name="updates[]"
                                   id="updates_{{ item.key }}"
                                   value="{{ item.quantity }}"
                                   min="0"
                                   aria-label="{{ 'cart.general.item_quantity' | t }}">
                            {% endcomment %}
                          </div>

                          <a class="inline-block text__body text__body--4 text__body--lighten--extra text__body--white mt1" href="/cart/change?line={{ forloop.index }}&amp;quantity=0">
                            {{ 'cart.general.remove' | t }}
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="grid__item lg--up--two-fifths">
                    <div class="table full--w">
                      <div class="table-cell one-third">
                        <div class="js-qty-wrapper color--main cart-page__qty">
                          <input type="number"
                                 class="inline-block quantity-sync__{{ forloop.index }}"
                                 name="updates[]"
                                 id="updates_{{ item.key }}"
                                 value="{{ item.quantity }}"
                                 min="0"
                                 aria-label="{{ 'cart.general.item_quantity' | t }}">
                        </div>
                      </div>
                      <div class="table-cell two-thirds text-align--right font-size--m sm--hide ">
                        {{ item.line_price | money }}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}

            <div class="cart__row">
              <div class="cart__divider--lighten my3"></div>

              <div class="grid">
                <div class="grid__item">
                  <div class="table full--w font-size--m mt1">
                    <div class="table-cell text-align--left">
                      <p>{{ 'cart.general.subtotal' | t }}</p>
                    </div>
                    <div class="table-cell text-align--right">
                      <p>{{ cart.total_price | money }}</p>
                      {% if cart.total_discounts > 0 %}
                        <p>{{ 'cart.general.savings' | t }} {{ cart.total_discounts | money }}</p>
                      {% endif %}
                    </div>
                  </div>
                  <em class="text__body text__body--4 text__body--lighten--extra text__body--white">Shipping and taxes not included. You will be contacted to arrange specific shipping needs.</em>
                  <div class="mt3 grid grid--half-gutter">
                    <div class="grid__item">
                      <input type="submit" name="update" class="action-button action-button--contrast action-button--mobile-full-width sm--mb2 md--up--mr3" value="{{ 'cart.general.update' | t }}">
                      <input type="submit" name="checkout" class="action-button action-button--red action-button--mobile-full-width" value="{{ 'cart.general.checkout' | t }}">
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </form>
      {% else %}
        {% comment %}
        Cart empty state
        {% endcomment %}
        <div class="line-length--medium supports-cookies">
          <div class="text__header text__header--2 text__header--2--extra text__header--white">{{ 'cart.general.empty' | t }}</div>
          <div class="mt3">
            <a href="/collections/2019" class="action-button action-button--contrast">View Collection</a>
          </div>
        </div>

        {% comment %}
        Cart no cookies state
        ---------------------
        Browser cookies are required to use the cart. If cookies aren't enabled in the
        browser a message is displayed prompting the user to enable them.
        {% endcomment %}
        <div class="supports-no-cookies">
          <p>{{ 'cart.general.cookies_required' | t }}</p>
        </div>
      {% endif %}

    </div>
  </div>
</section>
