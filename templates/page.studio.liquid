<div class="max-site-width md--up--px2">
  <div class="hero-section lg--up--ten-twelfths mx--auto px2 md--up--px0">
    <div class="sm--hide">
      <img src="https://cdn.shopify.com/s/files/1/0074/3859/8244/files/hero-01_fc74329b-f0c4-4672-9bed-cff841839c42.jpg?25440" alt="Rob Van Wyen & Kevin Seitz"/>

      <div class="hero-section__logo-container">
        {% include 'logo__large' %}
      </div>
    </div>

    <div class="md--up--hide">
      <img src="https://cdn.shopify.com/s/files/1/0074/3859/8244/files/hero-01-m_77e4d8d4-d192-40bc-b8cc-5982c218b1a4.jpg?25440" alt="Rob Van Wyen & Kevin Seitz"/>

      <div class="hero-section__logo-container">
        {% include 'logo__large' %}
      </div>
    </div>

    <div class="hero-section__text-container line-length--large pt2 px1 md--up--px3">
      <span class="text__body text__body--3 text__body--3--consistent text__body--slim text__body--white">
        Seitz was founded in 2018 by designers
        <span class="text__highlight text__highlight--1 text__highlight--white">
          Rob Van Wyen & Kevin Seitz
        </span>
        with the aim to revitalize art forms that are quickly fading away.
      </span>
    </div>

    <div class="text-align--center">
      <div class="hero-section__icon">
        {%- include 'arrow-down' -%}
      </div>
    </div>
  </div>
</div>

<div class="page page-style bg--secondary-background">
  <div class="max-site-width md--up--px2">
    <div class="page-section lg--up--ten-twelfths mx--auto px2 md--up--px0">
      <div class="grid">
        <div class="grid__item md--up--four-twelfths lg--up--three-twelfths">
          <div class="detail__container">
            <div class="detail__title text__highlight text__highlight--2">Contact the Studio</div>
            <div class="mt2 label">Call</div>
            <a class="detail link--inverse" href="tel:+13475991403">+1.347.599.1403</a>
            <div class="mt1 md--up--mt2 label">Email</div>
            <a class="detail" href="mailto:studio@studioseitz.com">studio@studioseitz.com</a>
            <div class="my3">
              <a href="/pages/request-a-quote" class="action-button action-button--contrast--inverse">
                Request A Quote
              </a>
            </div>
          </div>
        </div>

        <div class="grid__item md--up--eight-twelfths lg--up--nine-twelfths">
          <div class="detail__sibling-content md--up--nine-tenths lg--up--eight-tenths rte">
            {{ page.content }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
