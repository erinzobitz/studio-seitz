<section class="page page-style sm--pt2 pb3 md--up--py4 bg--{{ section_color }}-background">
  <div class="max-site-width md--up--px2">
    <div class="lg--up--ten-twelfths mx--auto px2 md--up--px0">
      <h1 class="text__header text__header--1 text__header--dark text-center line-length--small line-length--small--mobile mr--auto ml--auto">
        {{ page.title }}
      </h1>

      <div class="grid py1 md--up--py3">
        <div class="grid__item md--up--four-twelfths lg--up--three-twelfths">
          <div class="detail__container mb3">
            <div class="detail__title text__highlight text__highlight--2">Contact the Studio</div>
            <div class="mt2 label">Call</div>
            <a class="detail link--inverse" href="tel:+13475991403">+1 347 599 1403</a>
            <div class="mt1 md--up--mt2 label">Email</div>
            <a class="detail" href="mailto:studio@studioseitz.com">studio@studioseitz.com</a>
          </div>
        </div>

        <div class="grid__item md--up--eight-twelfths lg--up--nine-twelfths">
          <div class="detail__sibling-content md--up--nine-tenths lg--up--eight-tenths rte">
            {{ page.content }}
          </div>

          <div class="mt3 md--up--nine-tenths lg--up--eight-tenths rte">
            {% form 'contact' %}

              {% if form.posted_successfully? %}
                <p class="form-success">
                  {{ 'contact.form.post_success' | t }}
                </p>
              {% endif %}

              {{ form.errors | default_errors }}
              <div class="grid--small">
                <div class="grid__item--small mt2">
                  <label for="ContactFormName">{{ 'contact.form.name' | t }}</label>
                  <input type="text"
                    class="block mt1 full--w px2 py1"
                    name="contact[name]"
                    id="ContactFormName"
                    value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}"
                    required>
                </div>

                <div class="grid__item--small md--up--one-half mt2">
                  <label for="ContactFormEmail">{{ 'contact.form.email' | t }}</label>
                  <input type="email"
                    class="block mt1 full--w  px2 py1"
                    name="contact[email]"
                    id="ContactFormEmail"
                    value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                    spellcheck="false"
                    autocomplete="off"
                    autocapitalize="off"
                    required>
                </div>

                <div class="grid__item--small md--up--one-half mt2">
                  <label for="ContactFormPhone">Phone</label>
                  <input type="tel"
                    class="block mt1 full--w px2 py1"
                    name="contact[phone]"
                    id="ContactFormPhone"
                    value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                    pattern="[0-9\-]*">
                </div>

                <div class="grid__item--small mt2">
                  <label for="ContactFormItems">Item(s) of Interest*</label>
                  <input type="text"
                    class="block mt1 full--w px2 py1"
                    name="contact[Items of Interest]"
                    id="ContactFormItems"
                    autocomplete="off"
                    autocapitalize="off"
                    required>
                </div>

              <div class="grid__item--small mt2">
                <label for="ContactFormMessage">Message</label>
                <textarea rows="10"
                  class="block mt1 full--w  px2 py1"
                  name="contact[Message]"
                  id="ContactFormMessage">
                  {% if form.body %}
                    {{ form.body }}
                  {% endif %}
                </textarea>
              </div>

              <div class="grid__item--small">
                <input type="submit" class="action-button block full--w max-width--1 btn border--none mt3 px2 py1" value="{{ 'contact.form.send' | t }}">
              </div>
            {% endform %}

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
