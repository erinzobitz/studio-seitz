<div class="grid__item {% unless single_linklist %}one-half{% endunless %}">
  <ul class="{{ global__basic_font_size }} list--reset p0 m0 mxn1 mtn1 {% if single_linklist %}flex justify--start flex--wrap{% endif %}">
    <div class="footer__nav-title label pl1">{{ linklists[link_list].title }}</div>
    {% for link in linklists[link_list].links %}
      <li>
        <a href="{{ link.url }}" class="footer__nav-link pb1 pl1 inline-block mobile-nav__link color--{{ section_color }}-text">
          <span class="footer__nav-link-span">{{ link.title }}</span>
        </a>
      </li>
    {% endfor %}
  </ul>
</div>
