<div class="hero-section bg--{{ section_color }}-background lg--up--ten-twelfths mx--auto px2 md--up--px0">
  <div class="sm--hide">
    <img src="{{ product.metafields.attributes.header_image }}" alt="{{ product.title }}"/>
  </div>

  <div class="sm--hide hero-section__title-container">
    <div class="text__header text__header--1">{{ product.title }}</div>
  </div>

  <div class="md--up--hide">
    <img src="{{ product.metafields.attributes.mobile_header_image }}" alt="{{ product.title }}"/>
  </div>

  <div class="md--up--hide hero-section__title-container">
    <div class="text__header text__header--1">{{ product.metafields.attributes.mobile_title }}</div>
  </div>

  <div class="hero-section__text-container px1 md--up--px3">
    <div class="text__body text__body--3 text__body--white text-align--center">
      {{ product.description }}
    </div>
  </div>

  <div class="text-align--center">
    <div class="text__body text__body--3 text__body--slim text__body--white inline-block">Origin</div>
    <div class="text__highlight text__highlight--1 text__highlight--white inline-block">{{ product.metafields.attributes.origin }}</div>

    <div class="hero-section__icon">
      {%- include 'arrow-down' -%}
    </div>
  </div>

  <noscript>
    <img src="{{ image.src | img_url: 'large' }}" alt="{{ image.alt | escape }}" class="item--image">
  </noscript>
</div>
