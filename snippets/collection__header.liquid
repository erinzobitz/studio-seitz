<header role="banner">
  <div class="hero-section lg--up--ten-twelfths mx--auto px2 md--up--px0">
    <div class="sm--hide">
      <img src="{{ collection.image | img_url: '1400x' }}" alt="{{ collection.title }}"/>
    </div>

    <div class="md--up--hide">
      <img src="{{ collection.metafields.attributes.mobile_collection_image }}" alt="{{ collection.title }}"/>
    </div>

    <div class="hero-section__title-container">
      <div class="text__header text__header--1">{{ collection.title }}</div>
    </div>

    <div class="hero-section__text-container px1 md--up--px3">
      <div class="text__body text__body--3 text__body--3--consistent text__body--white text-align--center">
        {{ collection.description }}
      </div>
    </div>

    <div class="text-align--center">
      <span class="text__body text__body--3 text__body--3--consistent text__body--slim text__body--white">
        Meet
        <span class="text__highlight text__highlight--1 text__highlight--white">
          The Collection
        </span>
      </span>

      <div class="hero-section__icon">
        {%- include 'arrow-down' -%}
      </div>
    </div>
  </div>
</header>
